.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", movies_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_movie_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_movie_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Movie
    .inner
      = form_for @movie, :url => movie_path(@movie), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
